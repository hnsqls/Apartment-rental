<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ls.lease.web.admin.mapper.FeeKeyMapper">
    <resultMap id="FeeKeyVoMap" type="com.ls.lease.web.admin.vo.fee.FeeKeyVo">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="feeValueList" ofType="com.ls.lease.model.entity.FeeValue">
            <id property="id" column="fee_value_id"/>
            <result property="name" column="fee_value_name"/>
            <result property="unit" column="fee_value_unit"/>
            <result property="feeKeyId" column="fee_key_id"/>
        </collection>
    </resultMap>

    <select id="feeInfoList" resultMap="FeeKeyVoMap">
        select k.id,
               k.name,
               v.id   fee_value_id,
               v.name fee_value_name,
               v.unit fee_value_unit,
               v.fee_key_id
        from fee_key k
                 left join fee_value v
                           on k.id = v.fee_key_id and v.is_deleted = 0
        where k.is_deleted = 0
    </select>
</mapper>
